{% extends 'base.html.twig' %}

{% block title %}Accueil{% endblock %}

{% block body %}
<style>
    .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
    .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
</style>

<div class="example-wrapper">
    <h1>Bienvenue {{ user_name }} sur le site d'enchères de produits</h1>
    <a href="https://127.0.0.1:8000/enchere" > <input type="button" value="enchere"> </a>
    <a href="https://127.0.0.1:8000/logout" > <input type="button" value="deconnection"> </a>
    {% if user_name == 'romain' %}

    <a href="https://127.0.0.1:8000/register" > <input type="button" value="enregistrer nouveau fournisseur"> </a>
        <a href="https://127.0.0.1:8000/enchere/ajouter_enchere" > <input type="button" value="ajouter enchere"> </a>

    {% endif %}
</div>
<div class="container-fluid">
    <table>
        <h2>historique des encheres</h2>
        <thead>

{#        <h2>enchere numero {{ encheres.idEnchere }}</h2>#}
    <tr>
{#        <td>Enchère</td>#}
        <td>produits</td>
        <td>quantite</td>
        <td>prix</td>

    </tr>
    </thead>
    <tbody>
    {% for encheres in encheres %}

              {% if  encheres.fournisseur == user_name %}
        <tr>
{#            <td>{{ encheres.idEnchere }}</td>#}
            <td>{{ encheres.produit }}</td>
            <td>{{ encheres.quantite }}</td>
            <td>{{ encheres.prix }}</td>
        </tr>
        {% endif %}

    {% endfor %}
    </tbody>
    </table>
</div>
{% endblock %}
